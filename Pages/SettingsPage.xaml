<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LFGL.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer Padding="32">
        <StackPanel Spacing="8" MaxWidth="700" HorizontalAlignment="Left">
            
            <TextBlock Text="Settings" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,24" />

            <!-- Startup -->
            <StackPanel Background="#11FFFFFF" CornerRadius="8" Padding="16" Spacing="4">
                <TextBlock Text="Startup" FontWeight="SemiBold" FontSize="16" />
                
                <ToggleSwitch x:Name="StartOnStartupToggle" Header="Start LFGL on Windows startup" 
                              Toggled="StartOnStartupToggle_Toggled" />
                
                <ToggleSwitch x:Name="AutoScanToggle" Header="Auto-scan library on startup" 
                              Toggled="AutoScanToggle_Toggled" />
            </StackPanel>

            <!-- Behavior -->
            <StackPanel Background="#11FFFFFF" CornerRadius="8" Padding="16" Spacing="4" Margin="0,16,0,0">
                <TextBlock Text="Behavior" FontWeight="SemiBold" FontSize="16" />
                
                <ToggleSwitch x:Name="CloseToTrayToggle" Header="Minimize to system tray when closed" 
                              Toggled="CloseToTrayToggle_Toggled" />
            </StackPanel>

            <!-- Data -->
            <StackPanel Background="#11FFFFFF" CornerRadius="8" Padding="16" Spacing="12" Margin="0,16,0,0">
                <TextBlock Text="Data" FontWeight="SemiBold" FontSize="16" />
                
                <Button Content="Clear Icon Cache" Click="ClearCacheBtn_Click" />
                <TextBlock Text="Clears cached game icons and artwork. They will be re-downloaded on next scan." 
                           FontSize="12" Foreground="#888888" TextWrapping="Wrap" />
            </StackPanel>

            <!-- About -->
            <StackPanel Background="#11FFFFFF" CornerRadius="8" Padding="16" Spacing="4" Margin="0,16,0,0">
                <TextBlock Text="About" FontWeight="SemiBold" FontSize="16" />
                <TextBlock Text="LFGL - Luty Friendly Game Launcher" />
                <TextBlock Text="Version 1.0.0" Foreground="#888888" FontSize="12" />
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
